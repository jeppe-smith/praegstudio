---
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital@0;1&display=swap"
      rel="stylesheet"
    />
    <script src="//unpkg.com/alpinejs" defer is:inline></script>
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="PrægStudio er drevet af passion for personlig arkitektur, der fungerer og lever. I materialer, der forfører dig i dag og bekræfter dine valg i morgen."
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Præg Studio" />
    <meta name="twitter:card" content="summary" />
    <meta
      name="twitter:creator"
      content="Mads Kappel Mikkelsen <mads@praegstudio.dk>"
    />
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=UA-69547352-2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "UA-69547352-2");
    </script>
    <title>{title}</title>
  </head>
  <body class="dark:bg-void">
    <div class="max-w-screen-3xl mx-auto px-4 md:px-12">
      <div class="min-h-screen flex flex-col">
        <Header />
        <div class="flex-1 text-brand"><slot /></div>
        <footer
          class="md:h-24 my-6 md:my-0 flex flex-col md:flex-row justify-center items-center space-y-2 md:space-y-0 md:space-x-8 text-brand text-xs font-light"
        >
          <span>CVR 36979798</span>
          <a
            href="https://goo.gl/maps/ThTLEgfzkbT3NK2a8"
            target="_blank"
            rel="noreferrer"
            class="underline">Ballevej 1C, 8600 Silkeborg</a
          >
          <a href="mailto:info@praegstudio.dk" class="underline"
            >info@praegstudio.dk</a
          >
          <a href="tel:+4570603331" class="underline">+45 70 60 33 31</a>
          <!-- <a href="/karriere" class="underline">Karriere</a> -->
        </footer>
      </div>
    </div>
  </body>
</html>
