---
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital@0;1&display=swap"
      rel="stylesheet"
    />
    <script src="//unpkg.com/alpinejs" defer is:inline></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-void">
    <div class="max-w-screen-3xl mx-auto px-4 md:px-12">
      <div class="min-h-screen flex flex-col">
        <Header />
        <div class="flex-1"><slot /></div>
        <footer
          class="md:h-24 my-6 md:my-0 flex flex-col md:flex-row justify-center items-center space-y-2 md:space-y-0 md:space-x-8 dark:text-gray-300 text-xs font-light"
        >
          <span>CVR 36979798</span>
          <a
            href="https://goo.gl/maps/ThTLEgfzkbT3NK2a8"
            target="_blank"
            rel="noreferrer"
            class="underline">Ballevej 1C, 8600 Silkeborg</a
          >
          <a href="mailto:info@praegstudio.dk" class="underline"
            >info@praegstudio.dk</a
          >
          <a href="tel:+4525120166" class="underline">+45 25 12 01 66</a>
          <!-- <a href="/karriere" class="underline">Karriere</a> -->
        </footer>
      </div>
    </div>
  </body>
</html>
